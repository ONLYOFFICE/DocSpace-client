{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/src/index.js",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend Script (generate-metadata)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/src/scripts/generate-metadata.js",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend Script (save-meta-keys-usage)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/src/scripts/save-meta-keys-usage.js",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend Script (generate-auto-comments-metadata)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/src/scripts/generate-auto-comments-metadata.js",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend Script (verify-translations-spell-check)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/src/scripts/verify-translations-spell-check.js",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Debug Python Script (upload_to_docspace)",
      "program": "${workspaceFolder}/backend/src/scripts/form/upload_to_docspace.py",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/src"
      }
    }
  ]
}
