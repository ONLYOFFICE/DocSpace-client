{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "extends": [
    "../shared/biome.json"
  ],
  "files": {
    "includes": [
      "**",
      "!tsconfig.json",
      "!eslint.config.js",
      "!node_modules/**",
      "!dist/**",
      "!coverage/**",
      "!storybook-static/**",
      "!**/autoGeneratedTranslations.js",
      "!**/autoGeneratedTranslations.ts",
      "!webpack.config.js",
      "!tests/**",
      "!analyse.js",
      "!scripts/**",
      "!**/*.html"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noFallthroughSwitchClause": "off"
      }
    }
  }
}