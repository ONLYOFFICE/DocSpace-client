{
    "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
    "extends": [
        "../shared/biome.json"
    ],
    "linter": {
        "rules": {
            "performance": {
                "noImgElement": "error"
            }
        }
    },
    "files": {
        "includes": [
            "**",
            "!tsconfig.json",
            "!eslint.config.js",
            "!node_modules/**",
            "!.next/**",
            "!coverage/**",
            "!storybook-static/**",
            "!*/**/autoGeneratedTranslations.js",
            "!*/**/autoGeneratedTranslations.ts",
            "!webpack.config.js",
            "!tests/**",
            "!module-declarations.d.ts"
        ]
    }
}