{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "extends": [
    "../shared/biome.json"
  ],
  "linter": {
    "rules": {
      "performance": {
        "noImgElement": "error",
        "useGoogleFontPreconnect": "error",
        "noUnwantedPolyfillio": "error"
      },
      "style": {
        "noHeadElement": "error"
      },
      "suspicious": {
        "noDocumentImportInPage": "error",
        "noHeadImportInDocument": "error"
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!tsconfig.json",
      "!node_modules/*",
      "!.next/*",
      "!coverage/*",
      "!storybook-static/*",
      "!*/**/autoGeneratedTranslations.js",
      "!*/**/autoGeneratedTranslations.ts",
      "!webpack.config.js",
      "!tests/*"
    ]
  }
}